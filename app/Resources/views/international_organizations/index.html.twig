                <th>Год пуска 5-го энергоблока</th>
                <th>Год пуска 6-го энергоблока</th>
            </tr>
            {% for record in records %}
                <tr>
                        {% if record.country %}
                            <td>{{record.country.name}}</td>
                        {% else %}
                            <td></td>
                        {% endif %}
                        {% if record.station %}
                            <td>{{record.station.name}}</td>
                        {% else %}
                            <td></td>
                        {% endif %}                        
                        <td>{{record.startOfConstruction}}</td>
                        <td>{{record.yearOfStartOneBlock}}</td>
                        <td>{{record.yearOfStartTwoBlock}}</td>
                        <td>{{record.yearOfStartThreeBlock}}</td>
                        <td>{{record.yearOfStartFourBlock}}</td>
                        <td>{{record.yearOfStartFiveBlock}}</td>
                        <td>{{record.yearOfStartSixBlock}}</td>
                </tr>
            {% endfor %}
        </table>
        <div class="row-pagination">
        </div>
    </div>
